@model Account

<h1 class="display-4">Account Number @Model.AccountNumber (@Model.AccountType)</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="BillPay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <p>Please enter the Payee</p>
                    <div class="form-group">
                        <label for="PayeeID" class="control-label"></label>
                        <input id="PayeeID" name="PayeeID" class="form-control" value="@ViewBag.PayeeID?.ToString()"
                               data-val="true" data-val-number="The field AccountNumber must be a number."
                               data-val-required="The Amount field is required." />
                        @Html.ValidationMessage("PayeeID", new { @class = "text-danger" })
                    </div>
                    <p>Please enter the transfer amount</p>
                    <div class="form-group">
                        <label for="Amount" class="control-label"></label>
                        <input id="Amount" name="Amount" class="form-control" value="@ViewBag.Amount?.ToString("0.00")"
                               data-val="true" data-val-number="The field Amount must be a number."
                               data-val-required="The Amount field is required." />
                        @Html.ValidationMessage("Amount", new { @class = "text-danger" })
                    </div>
                    <p>Please enter the ScheduleDate</p>
                    <div class="form-group">
                        <label for="ScheduleDate" class="control-label"></label>
                        <input id="ScheduleDate" name="ScheduleDate" class="form-control" value="@ViewBag.ScheduleDate?.ToString("dd/MM/yyyy")"                               
                        @Html.ValidationMessage("ScheduleDate", new { @class = "text-danger" })
                    </div>
                    <p>Please enter the Period</p>
                    <div class="form-group">
                        <label for="Period" class="control-label"></label>
                        <input id="Period" name="Period" class="form-control" value="@ViewBag.Period?.ToString()"
                               data-val="true" data-val-number="The field Amount must be a number."
                               data-val-required="The Amount field is required." />
                        @Html.ValidationMessage("Period", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Deposit" class="btn btn-primary" />
                    </div>

</form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}